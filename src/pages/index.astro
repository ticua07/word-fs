---
import Layout from "../layouts/Layout.astro";
import Form from "../components/Form.svelte";
---

<Layout title="Word FS">
  <main class="bg-neutral-950">
    <section
      class="w-screen h-screen flex flex-col justify-center items-center gap-4"
    >
      <section
        class="gap-4 flex flex-col bg-neutral-900 p-8 rounded py-8 w-1/3 justify-center items-center"
      >
        <h1 class="text-white text-center text-3xl">Word FS</h1>
        <article>
          <Form client:only="svelte" />
        </article>
        <hr class="h-px border-0 dark:bg-gray-800" />
        <article>
          <a href="/get">
            <button class="text-white bg-slate-900 w-64 px-4 py-2 rounded">
              Get
            </button>
          </a>
        </article>
      </section>
    </section>
  </main>
</Layout>
